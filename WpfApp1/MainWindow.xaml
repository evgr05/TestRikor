<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Тестирование ноутбуков" Height="450" Width="800"
        Background="AliceBlue"
        WindowState="Maximized"
        MinHeight="450"
        MinWidth="800"
        >
    <Grid Margin="100">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="40"/>
                <Setter Property="Background" Value="LightSkyBlue"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Monitor" Grid.Row="0" Grid.Column="1" Content="Проверка монитора" Click="Start_Click"/>
        <Button x:Name="Drives" Grid.Row="1" Grid.Column="1" Content="Проверка дисковых устройств" Click="Drives_Click"/>
    </Grid>
</Window>
